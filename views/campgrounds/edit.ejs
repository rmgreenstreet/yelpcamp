<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 class="display-4 text-center">Edit <%= campground.name %></h1>
		<div class="row">
		<div id="" class="col col-md-6 mx-auto">
			<form action="/campgrounds/<%= campground.id %>?_method=put" method="post" enctype="multipart/form-data">
				<div class="form-group">
					<label for="campground[name]">Campground Name</label>
					<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required="true" autofocus="autofocus">
				</div>
				<div class="form-group">
					<label for="image">Upload campground picture</label>
					<input class="form-control"  type="file" name="image" accept="image/*" required ="false">
					<p>
						Accepted filetypes: jpg, jpeg, png, gif
					</p>
				</div>
				<div class="form-group">
					<label for="campground[description]">Campground Description</label>
					<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" required="true">
				</div>
				<div class="form-group">
					<label for="campground[price]">Campground Price</label>
					<input class="form-control" type="number" step=".01" name="campground[price]" value="<%= campground.price %>" required="true">
				</div>
				<div class="form-group">
					<label for="campground[location]">Campground Location</label>
    				<input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required="true">
				</div>
				<input type="hidden" name="publicId" value="<%= campground.image.publicId %>">
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>


<%- include("../partials/footer.ejs") %>