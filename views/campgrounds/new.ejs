<%- include("../partials/header.ejs") %>
<div class="container">
		<h1 class="text-center">
		Create a new Campground
		</h1>
	<div class="row">
		<div id="" style="width:30%; margin: 25px auto;">
			<form action="/campgrounds" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Campground Name" required="true" autofocus="autofocus">
				</div>
				<div class="form-group">
					<input class="form-control"  type="text" name="image" placeholder="Image URL" required="true">
				</div>
				<div class="form-group">
					<input class="form-control"  type="textarea" name="description" placeholder="Description" required="true">
				</div>
				<div class="form-group">
					<input class="form-control"  type="textarea" name="price" placeholder="Price per night" required="true">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs") %>