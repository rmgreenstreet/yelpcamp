<%- include("partials/header") %>
	<div class="container">
		<h1 class="display-4 text-center">Sign Up</h1>
		<div class="row">
			<div id="" style="width:30%; margin: 25px auto;">
				<form name="newuser" action="/register" method="POST">
					<div class="form-group">
						<input type="text" name="username"  class="form-control" placeholder="Set a username" autofocus="autofocus">
					</div>
					<div class="form-group">
						<input type="password" name="password" class="form-control" placeholder="Set a password">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">
							Submit
						</button>
					</div>
				</form>
				<p>
					Already have an account? <a href="/login">Log in here!</a>
				</p>
			</div>
		</div>
	</div>
<%- include("partials/footer") %>