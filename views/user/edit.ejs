<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 class="display-4 text-center">Edit <%= foundUser.username %></h1>
		<div class="row">
		<div id="" class="col col-md-6 mx-auto">
			<form action="/profile/<%= foundUser.id %>?_method=put" method="post"  enctype="multipart/form-data">
				<div class="form-group">
					<label for="user[username]">Update Username</label>
					<input class="form-control" type="text" name="user[username]" value="<%= foundUser.username %>" required="true" autofocus="autofocus">
				</div>
				<div class="form-group">
					<label for="image">Upload Profile Picture</label>
					<input class="form-control"  type="file" name="image" accept="image/*" required ="false" value="foundUser.image.url">
					<p>
						Accepted filetypes: jpg, jpeg, png, gif.<br />
						Leave blank to keep existing image.
					</p>
				</div>
				<input type="hidden" name="publicId" value="<%= foundUser.image.publicId %>">
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					Submit
					</button>
				</div>
			</form>
			<a href="/profile/<%= foundUser.id %>">Go Back</a>
		</div>
	</div>
</div>


<%- include("../partials/footer.ejs") %>