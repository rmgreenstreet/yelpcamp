<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 class="display-4 text-center">Edit <%= foundUser.username %></h1>
		<div class="row">
		<div id="" class="col col-md-6 mx-auto">
			<form action="/profile/<%= foundUser.id %>?_method=put" method="post">
				<div class="form-group">
					<label for="user[username]">Update Username</label>
					<input class="form-control" type="text" name="user[username]" value="<%= foundUser.username %>" required="true" autofocus="autofocus">
				</div>
				<div class="form-group">
					<label for="user[image]">Update picture URL</label>
					<input class="form-control" type="text" name="user[image]" value="<%= foundUser.image %>" required="true">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					Submit
					</button>
				</div>
			</form>
			<a href="/profile/<%= foundUser.id %>">Go Back</a>
		</div>
	</div>
</div>


<%- include("../partials/footer.ejs") %>