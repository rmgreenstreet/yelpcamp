<%- include("../partials/header") %>
	<div class="container">
		<div class="row">
			<div class="col col-md-6 mx-auto">
				<h1 class="display-4 text-center">Reset Password</h1>
						<form name="resetPassword" action="/reset/<%= token %>" method="POST">
							<div class="form-group">
								<label for="newPassword">Enter a new password for <%= foundUser.username %></label>
								<input id="newPassword" type="password" name="newPassword"  class="form-control" placeholder="New Password" autofocus="autofocus">
								<p>
									Passwords are case-sensitive
								</p>
							</div>
							<div class="form-group">
								<label for="confirmNewPassword">Confirm password</label>
								<input id="confirmNewPassword" type="password" name="confirmNewPassword"  class="form-control" placeholder="Confirm New Password">
								<p id="noMatch" style="display:none;" class="text-warning">
									Passwords do not match
								</p>
								<p id="match" style="display:none;" class="text-success">
									Passwords match
								</p>
							</div>
							<div class="form-group">
								<button class="btn btn-lg btn-primary btn-block" id="submit">
									Submit
								</button>
							</div>
						</form>
				<p>
					Don't have an account? <a href="/register">Create One Now!</a>
				</p>
			</div>
		</div>
	</div>
<%- include("../partials/footer") %>