<%- include("../partials/header") %>
	<div class="container">
		<div class="row">
			<div class="col col-md-6 mx-auto">
				<h1 class="display-4 text-center">Reset Password</h1>
						<form name="forgotPassword" action="/forgot" method="POST">
							<div class="form-group">
								<label for="username">Enter your username and we will send a password reset link to the email address associated with your account</label>
								<input type="text" name="username"  class="form-control" placeholder="Username" autofocus="autofocus">
								<p>
									Usernames are case-sensitive
								</p>
							</div>
							<div class="form-group">
								<button class="btn btn-lg btn-primary btn-block">
									Submit
								</button>
							</div>
						</form>
				<p>
					Don't have an account? <a href="/register">Create One Now!</a>
				</p>
			</div>
		</div>
	</div>
<%- include("../partials/footer") %>